<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/efecto_item_lista_transparente"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_discoteca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblanco"
                android:textSize="12sp"
                tools:text="DISCOTECA NIGHT LIFE" />

            <TextView
                android:id="@+id/detalle_uno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblanco"
                android:textSize="11sp"
                tools:text="Six Pack de 6 Latas Red Bulls" />

            <TextView
                android:id="@+id/detalle_dos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblanco"
                android:textSize="11sp"
                tools:text="Balde de 10 Cervezas Millers" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorblanco"
                    android:textSize="11sp"
                    tools:text="Total S/.270.00" />

                <ImageView
                    android:id="@+id/iv_plusmorado"
                    android:layout_width="@dimen/width_circulo_plus"
                    android:layout_height="@dimen/width_circulo_plus"
                    android:layout_margin="5dp"
                    tools:background="@drawable/plusmorado" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fecha_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblanco"
                android:textSize="11sp"
                tools:text="Compró: 07.05.2015" />

            <TextView
                android:id="@+id/fecha_fin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="11sp"
                tools:text="Venció: 07.09.2015" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_row_tacho"
                android:layout_width="@dimen/width_images_perfil_extras"
                android:layout_height="@dimen/width_images_perfil_extras"
                tools:background="@drawable/tacho" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

</LinearLayout>