<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:background="@color/colorblanco"
        android:elevation="3dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_row_imagen_canje"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    tools:src="@drawable/img_party" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PromociÃ³n: "
                    android:textSize="@dimen/size_letter9" />

                <TextView
                    android:id="@+id/row_tv_promocion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textSize="8sp"
                    tools:text="1 Mes en GYM FITNESS" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vale: "
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_letter9" />

                <TextView
                    android:id="@+id/row_tv_puntos_consumo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_letter9"
                    tools:text="99pts Consumo" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_row_ic_condiciones"
                        android:layout_width="@dimen/width_images_perfil_extras"
                        android:layout_height="@dimen/width_images_perfil_extras"
                        android:layout_weight="1"
                        tools:background="@drawable/iv_row_ic_condicion" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/row_condiciones"
                        android:textColor="@color/colorAccent"
                        android:textSize="6sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_row_ic_agregar_a_carrito"
                        android:layout_width="@dimen/width_images_perfil_extras"
                        android:layout_height="@dimen/width_images_perfil_extras"
                        android:layout_weight="1"
                        tools:background="@drawable/iv_row_ic_agregar" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/row_agregar"
                        android:textColor="@color/colorAccent"
                        android:textSize="6sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_row_ic_canjear"
                        android:layout_width="@dimen/width_images_perfil_extras"
                        android:layout_height="@dimen/width_images_perfil_extras"
                        android:layout_weight="1"
                        tools:background="@drawable/iv_row_ic_canjear" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/row_canjear"
                        android:textColor="@color/colorAccent"
                        android:textSize="6sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>