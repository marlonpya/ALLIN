<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_btnEventoEspecial"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/efecto_item_lista_transparente"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".35"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".35">

            <ImageView
                android:id="@+id/row_iv_evento_contorno"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                tools:background="@drawable/circulo_con_lineas" />

            <ImageView
                android:id="@+id/row_iv_imagen_evento"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".65"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/row_tv_evento_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size_letter5"
                android:textStyle="bold"
                tools:text="RAINBOW PARTY" />

            <TextView
                android:id="@+id/row_tv_evento_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:textColor="@color/colorblanco"
                android:textSize="@dimen/size_letter6"
                tools:text="Fecha : Domingo 21 de Junio 2016" />

            <TextView
                android:id="@+id/row_tv_evento_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:textColor="@color/colorblanco"
                android:textSize="@dimen/size_letter6"
                tools:text="Hora : 10:00 pm" />

            <TextView
                android:id="@+id/row_tv_evento_discoteca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:textColor="@color/colorblanco"
                android:textSize="@dimen/size_letter6"
                tools:text="Discoteca: Night Life" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white" />
</LinearLayout>