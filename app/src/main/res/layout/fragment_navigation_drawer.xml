<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/nav_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNombreUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center|right"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/iv_row_lista_dialogo_imagen"
                        android:layout_toStartOf="@+id/iv_row_lista_dialogo_imagen"
                        android:text="Usuario"
                        android:textColor="@color/colorblanco"
                        android:textSize="@dimen/size_letter5" />

                    <TextView
                        android:id="@+id/txtEditarPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/txtNombreUsuario"
                        android:layout_alignRight="@+id/txtNombreUsuario"
                        android:layout_below="@+id/txtNombreUsuario"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:text="Editar mi Perfil"
                        android:textColor="@color/colorblanco"
                        android:textSize="@dimen/size_letter6" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_imagen_usuario_navegador"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/logo" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

</LinearLayout>