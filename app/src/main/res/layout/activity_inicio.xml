<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/fondo_allin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/idiv_layout_activity_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/son_toolbar_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="35dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".32"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="148dp"
                            android:layout_height="148dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            tools:src="@drawable/img_principal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".67"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".23"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/sientente_vip"
                                android:textColor="@color/colorblanco"
                                android:textSize="@dimen/size_letter5" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".28"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etUsuarioRegistro"
                                style="@style/StyledTilEditText"
                                android:layout_width="@dimen/width_input_login"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:hint="@string/usuario_correo_login"
                                android:inputType="textEmailAddress"
                                android:textAlignment="center"
                                android:textColorHint="@color/colorblanco"
                                android:textSize="@dimen/size_letter6" />

                            <EditText
                                android:id="@+id/etPasswordRegistro"
                                style="@style/StyledTilEditText"
                                android:layout_width="@dimen/width_input_login"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:hint="@string/password_login"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:textAlignment="center"
                                android:textColorHint="@color/colorblanco"
                                android:textSize="@dimen/size_letter6" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:layout_weight=".14"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight=".2"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".09">

                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".12"
                                    android:background="@color/maincolorgreen">

                                    <ImageView
                                        android:id="@+id/imgRegistro"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="4dp"
                                        android:src="@drawable/ic_iniciar_sesion" />

                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".004"
                                    android:background="@color/colorgreyBotonDark" />

                                <FrameLayout
                                    android:id="@+id/btnIniciarSesion"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".69"
                                    android:background="@color/maincolorgreen">

                                    <TextView
                                        android:id="@+id/txtRegistro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/iniciar_sesion"
                                        android:textColor="@color/colorblanco" />
                                </FrameLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".14"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight=".15"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".09" />

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".12"
                                    android:background="@color/colorgreyBoton">

                                    <ImageView
                                        android:id="@+id/imgRegistroFacebook"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="6dp"
                                        android:background="@drawable/ic_registrarse_sesion" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".004"
                                    android:background="@color/colorgreyBotonDark" />

                                <FrameLayout
                                    android:id="@+id/btnRegistro"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".69"
                                    android:background="@color/colorgreyBoton">

                                    <TextView
                                        android:id="@+id/txtRegistroFacebook"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/registrarse_login"
                                        android:textColor="@color/colorblanco" />
                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".14"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight=".15"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".09" />

                                <LinearLayout
                                    android:layout_width=".0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".814"
                                    android:gravity="center">

                                    <com.facebook.login.widget.LoginButton
                                        android:id="@+id/btnIniciarSesionFB"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp" />
                                </LinearLayout>

                                <!--<FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".12"
                                    android:background="@color/maincolorbluefb">

                                    <ImageView
                                        android:id="@+id/imgRegistroFb"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_facebook_sesion" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".004"
                                    android:background="@color/colorgreyBotonDark"></FrameLayout>

                                <FrameLayout
                                    android:id="@+id/btnRegistroFacebook"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".69"
                                    android:background="@color/maincolorbluefb">

                                    <TextView
                                        android:id="@+id/txtRegistroFb"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/registrarse_loginF"
                                        android:textColor="@color/colorblanco" />
                                </FrameLayout>
-->
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>